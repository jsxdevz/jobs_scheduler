{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"], // Add "dom" to include console in the browser environment
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
